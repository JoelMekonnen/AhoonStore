<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardMaxElevation="12dp"
    app:contentPadding="10dp"
    android:layout_marginTop="30dp"
    android:backgroundTint="@color/whiteMilk"
    android:layout_height="match_parent">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:padding="20dp"
       android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/prodImage"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/productName"
             android:fontFamily="@font/sourcesans"
             android:textColor="@color/black"
             android:textSize="25sp"
             android:layout_gravity="center_horizontal"
             android:layout_marginTop="10dp"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/productDesc"
             android:textAlignment="center"
             android:textSize="15sp"
             android:textColor="@color/black"
             android:fontFamily="@font/montserrat"
             android:layout_marginTop="10dp"
             />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:fontFamily="@font/engravers"
           android:textSize="50sp"
           android:textColor="@color/black"
           android:layout_gravity="center_horizontal"
           android:id="@+id/price"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="30dp"
           android:orientation="horizontal">
           <Button android:id="@+id/orderProd"
               android:layout_height="50dp"
               android:layout_width="100dp"
               android:text="@string/btn_order"
               android:layout_marginStart="40dp"
               android:layout_gravity="center_horizontal"
               android:backgroundTint="@color/boldHeader"
               android:textColor="@color/white" />
           <Button android:id="@+id/saveForLatter"
               android:layout_height="50dp"
               android:layout_width="100dp"
               android:text="@string/btn_latter"
               android:layout_marginStart="40dp"
               android:layout_gravity="center_horizontal"
               android:backgroundTint="@color/background"
               android:textColor="@color/white" />
       </LinearLayout>
   </LinearLayout>
</androidx.cardview.widget.CardView>